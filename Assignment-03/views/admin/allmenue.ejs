<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All menue</title>
    <!-- 
    - google font link
  -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&family=Forum&display=swap"
        rel="stylesheet">

    <!-- 
    - custom css link
  -->
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="apibody">
    <div class="container">
        <h1 style="margin: 5% 40%;">All Menue</h1>
        <div id="recipiesList">
            <% menuItems.forEach(item=> { %>
                <div class="recipe">

                    <div class="menu-card hover:card">

                        <figure class="card-banner img-holder" style="--width: 100; --height: 100;">
                            <img src="/images/menu-1.png" width="100" height="100" loading="lazy" alt="Greek Salad"
                                class="img-cover">
                        </figure>

                        <div>

                            <div class="title-wrapper">
                                <h3 class="title-3">
                                    <a href="" class="card-title">
                                        <%= item.name %>
                                    </a>
                                </h3>

                                <span class="badge label-1">New</span>

                                <span class="span title-2">
                                    $<%= item.price %>
                                </span>
                            </div>

                            <p class="card-text label-1">
                                <%= item.description %>
                            </p>

                        </div>
                    </div>
                    <div class="editdelbuttondiv">
                        <div><a href="/admin/menu/<%= item._id %>/edit" class="btn btn-primary" id="editbtn">
                                <span class="text text-1">Edit</span>

                                <span class="text text-2" aria-hidden="true">Edit</span>
                            </a></div>
                        <div id="deletebtn"><a href="/admin/menu/<%= item._id %>/delete" class="btn btn-primary">
                                <span class="text text-1">Delete</span>

                                <span class="text text-2" aria-hidden="true">Delete</span>
                            </a></div>
                    </div>

                </div>
                <% }) %>
        </div>
    </div>


</body>

</html>